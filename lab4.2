Console.Write("Введите количество строк N: ");
int N = int.Parse(Console.ReadLine());
Console.Write("Введите количество столбцов M: ");
int M = int.Parse(Console.ReadLine());

if (M < 2)
{
    Console.WriteLine("Матрица должна содержать как минимум два столбца.");
    return;
}
int[,] matrix = new int[N, M];
for (int i = 0; i < N; i++)
{
    Console.WriteLine($"Введите элементы строки {i + 1} через пробел:");
    string[] inputs = Console.ReadLine().Split(' ');
    for (int j = 0; j < M; j++)
    {
        matrix[i, j] = int.Parse(inputs[j]);
    }
}
int countNonNegative = 0;
for (int i = 0; i < N; i++)
{
    if (matrix[i, 1] >= 0)
        countNonNegative++;
}
Console.WriteLine($"Количество неотрицательных элементов во втором столбце: {countNonNegative}");
